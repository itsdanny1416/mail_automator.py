# App
APP_TIMEZONE=America/New_York

# SQL example (pick one)
SQL_URL=postgresql+psycopg2://user:pass@host:5432/dbname
# or sqlite:///local.db

# Gmail API (OAuth) files you download from Google Cloud
GMAIL_CREDENTIALS_FILE=credentials.json
GMAIL_TOKEN_FILE=token.json

# Microsoft Graph (Outlook) App Registration
MS_TENANT_ID=YOUR_TENANT_ID
MS_CLIENT_ID=YOUR_CLIENT_ID
MS_CLIENT_SECRET=YOUR_CLIENT_SECRET
OUTLOOK_SENDER_UPN=you@company.com
# Optional: MS Redirect URI (default is http://localhost:8000/get_token)
# MS_REDIRECT_URI=http://localhost:8000/get_token